{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "example/**/*.ts",
    "example/**/*.tsx"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["dom", "es2015", "es2016", "esnext"],
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "react-native-safe-area-context": ["./src"]
    },
    "outDir": "./build"
  },
  "exclude": ["node_modules"]
}
